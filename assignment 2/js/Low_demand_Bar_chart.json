{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 250,
  "background":"antiquewhite",
  "title": "Price rank in the suburb that is in low demand of Melbourne",
  "data": {
    "url": "https://raw.githubusercontent.com/Qianmiao2021/Fit3179/main/assignment%202/data/median_house_price.csv"
  },
  "layer": [
    {
      "mark": {"type": "bar","height": {"band": 0.7}, "cornerRadiusEnd": 5, "tooltip": true},
     
      "selection": {
        "series": {
          "type": "single",
          "encodings": ["color"],
          "on": "click",
          "bind": "legend"
        }
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == 2017"},
    {"calculate": "parseInt(datum.Price)", "as": "house_price"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "house_price", "order": "ascending"}]
    },
    {"filter": "datum.rank <= 5"}
  ],
  "encoding": {
    "y": {
      "field": "Suburb",
      "type": "nominal",
      "title": "Suburb",
      "sort": {"field": "house_price", "op": "sum", "order": "descending"}
    },
    "x": {
      "field": "house_price",
      "type": "quantitative",
      "title": "Price",
      "format": ",",
      "axis": {"tickCount": 6},
      "scale": {"domain": [1, 100000]}
    },
    "color": {
        "field": "Suburb",
        "scale": {
          "domain": ["HOPETOUN", "RAINBOW", "SEA LAKE", "JEPARIT", "RUPANYUP"],
          "range": ["#A77B5A", "#D2B58D","#D2B58D","#D2B58D","#D2B58D"]
        }
      },
        "opacity": {
        "condition": {"selection": "series", "value": 1},
        "value": 0.4
      }
  }
}